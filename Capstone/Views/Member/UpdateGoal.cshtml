@model Domain.Goal

@{
    ViewData["Title"] = "UpdateGoal";
     Layout = "~/Views/Shared/MemberLayout.cshtml";
}

<h2>Update Goal</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateGoal">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GoalsSavings" class="control-label">Current Savings</label>
                <input asp-for="GoalsSavings" class="form-control" />
                <span asp-validation-for="GoalsSavings" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GoalSavingsPerMonth" class="control-label">Savings per month</label>
                <input asp-for="GoalSavingsPerMonth" class="form-control" />
                <span asp-validation-for="GoalSavingsPerMonth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MonthGoals" class="control-label">How many months will you save for</label>
                <input asp-for="MonthGoals" class="form-control" />
                <span asp-validation-for="MonthGoals" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoanTermInYears" class="control-label">How long is this loan in years</label>
                <input asp-for="LoanTermInYears" class="form-control" />
                <span asp-validation-for="LoanTermInYears" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InterestRate" class="control-label">Interest rate</label>
                <input asp-for="InterestRate" class="form-control" />
                <span asp-validation-for="InterestRate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
